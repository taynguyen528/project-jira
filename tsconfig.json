{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./src",
    "paths": {
      "api": ["api"],
      "assets": ["assets"],
      "components": ["components"],
      "avatar": ["components/Avatar"],
      "container": ["components/Container"],
      "drawer": ["components/Drawer"],
      "label": ["components/Label"],
      "modals": ["components/Modals"],
      "spinners": ["components/Spinners"],
      "editor": ["components/Editor"],
      "constant": ["constant"],
      "contexts": ["contexts"],
      "hooks": ["hooks"],
      "projectHooks": ["hooks/ProjectHooks"],
      "layouts": ["layouts"],
      "pages": ["pages"],
      "projMgmt": ["pages/ProjMgmt"],
      "userMgmt": ["pages/UserMgmt"],
      "router": ["router"],
      "schemas": ["schemas"],
      "store": ["store"],
      "drawerSlice": ["store/quanLyDrawer"],
      "modalSlice": ["store/quanLyModal"],
      "userSlice": ["store/quanLyNguoiDung"],
      "projSlice": ["store/quanLyProject"],
      "projCtgrSlice": ["store/quanLyProjectCategory"],
      "spinnerSlice": ["store/quanLySpinner"],
      "template": ["template"],
      "projMgmtTpl": ["template/ProjMgmt"],
      "userMgmtTpl": ["template/UserMgmt"],
      "types": ["types"],
      "utils": ["utils"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
